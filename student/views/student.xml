<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="student_act" model="ir.actions.act_window">
			<field name="name">Student</field>
			<field name="res_model">student</field>
			<field name="view_mode">tree,form</field>
		</record> 
        <record id="student_view_tree" model="ir.ui.view">
			<field name="name">student.view.tree</field>
			<field name="model">student</field>
			<field name="arch" type="xml">
				<tree string="Student List">
                    <field name="name" />                    
					<field name="student_id"/>
                    <field name="email"/>
				</tree>
			</field>
		</record>
		<record id="student_view_form" model="ir.ui.view">
			<field name="name">student.view.form</field>
			<field name="model">student</field>
			<field name="arch" type="xml">
				<form string="Student">         
					<button string="Create User" name="action_create_user" type="object" class="oe_highlight" invisible="is_user"/>   
					<button string="Send Invitation Email" name="action_send_invitation" type="object" class="oe_link" invisible="not is_user"/>           
					<sheet>
						<field name="image" widget="image" class="oe_avatar" />
						<group>							
                            <group>      
								<field name="name" string="Name"/>                          
                                <field name="email" required="1"/>
                                <field name="phone_no" required="1"/>
								<field name="is_user" invisible="1"/>
                                <separator/>
                            </group>
							<group>                                
                                <field name="student_id" required="1"/>
								<field name="address" />
								<field name="partner_id" string="Contact"/>
                                <separator/>
                            </group>
							<notebook>
								<page name="education" string="Education">
									<group>
										<group>
											<field name="class_id" />
											<field name="batch_id" />
										</group>
										<group>
											<field name="academic_year_id" />
										</group>
									</group>
								</page>
							</notebook>
						</group>
					</sheet>
				</form>
			</field>
		</record>
    </data>
    

</odoo>
