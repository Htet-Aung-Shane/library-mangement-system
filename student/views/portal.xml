<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="portal_name_update" inherit_id="portal.portal_my_home">
		<xpath expr="//t[@t-set='title']" position="replace">
			<t t-set="title">
				Profile
			</t>
		</xpath>
	</template>
	<template id="portal_name_update" inherit_id="portal.portal_my_home">
		<xpath expr="//t[@t-call='portal.portal_docs_entry'][2]" position="inside">
			<t t-set="title">
				Update &amp; Security
			</t>
		</xpath>
	</template>
	<template id="security_name_update" inherit_id="portal.portal_my_security">
		<xpath expr="//h3[hasclass('my-0')]" position="replace">
			<h3 class="my-0">
				Update &amp; Security
			</h3>
		</xpath>
	</template>
	<template id="add_portal_view" inherit_id="portal.portal_my_home">
		<xpath expr="//div[hasclass('o_portal_category')]/t[2]" position="after">
			<t t-call="portal.portal_docs_entry">
				<t t-set="icon" t-value="'/student/static/description/portal.png'" />
				<t t-set="title">
					Rent History
				</t>
				<t t-set="text">
					See Your Library Transaction
				</t>
				<t t-set="url" t-value="'/rent/history'" />
				<t t-set="config_card" t-value="True" />
			</t>
			<t t-call="portal.portal_docs_entry">
				<t t-set="icon" t-value="'/student/static/description/portal.png'" />
				<t t-set="title">
					Rent Books
				</t>
				<t t-set="text">
					Find all can hire books
				</t>
				<t t-set="url" t-value="'/rent_book'" />
				<t t-set="config_card" t-value="True" />
			</t>
		</xpath>
	</template>
	<template id="student.StudentProfile" name="Library Transitions">
		<t t-call="portal.portal_layout">
			<t t-set="breadcrumbs_searchbar" t-value="True"/>
			<t t-call="portal.portal_searchbar" class="border">
				<!-- Pass the searchbar_inputs variable -->
				<t t-set="searchbar_inputs" t-value="searchbar_inputs"/>
			</t>
			<t t-call="portal.portal_table">
				<thead style="font-size:15px;" class="text-light text-center bg-dark p-5">
					<tr class="active">
						<th class="col-2">Sequence Name</th>
						<th class="col-3">Book Name</th>
						<th class="col-2">Rent Date</th>
						<th class="col-2">Due Date</th>
						<th class="col-1">Rent Qty</th>
						<th class="col-1">Is Return</th>
						<th class="col-1">Is Penalty	</th>
						<th class="col-1">	Status</th>
					</tr>
				</thead>
				<t t-foreach="data" t-as="d" >
					<tr style="font-size:12px;" class="text-light text-center bg-dark">
						<td class="col-2">
							<t t-out="d['rent_id'].name" />
						</td>
						<td class="col-2">
							<t t-out="d['book_id'].name" />
						</td>
						<td class="col-2">
							<t t-out="d['rent_date']" />
						</td>
						<td class="col-2">
							<t t-out="d['expire_date']" />
						</td>
						<td class="col-2">
							<t t-out="d['rent_quantity']" />
						</td>
						<td class="col-2">
							<t t-if="d['is_confirm'] == false">
								<i t-attf-class="fa fa-window-minimize {{'text-danger' if d['is_returned'] == True else 'text-success' }} fs-5" aria-hidden="true"></i>
							</t>
							<t t-else="">
								<i t-attf-class="fa fa-window-minimize {{'text-success' if d['is_returned'] == True else 'text-danger' }} fs-5" aria-hidden="true"></i>
							</t>
						</td>
						<td class="col-2">
							<i t-attf-class="fa fa-window-minimize {{'text-danger' if d['is_penalty'] == True else 'text-success' }} fs-5" aria-hidden="true"></i>
						</td>
						<td>
							<t t-if="d['is_confirm']">
								<span t-if="d['is_returned'] == false" class="badge rounded-pill bg-warning py-1 text-secondary">Hiring</span>
								<span t-if="d['is_returned']" class="badge rounded-pill bg-success py-1">Returned</span>
							</t>
							<span t-if="d['is_confirm'] == false " class="badge rounded-pill bg-warning py-1 text-secondary">Pending</span>
						</td>
					</tr>
				</t>
			</t>
			<div class="d-flex justify-content-center">
				<div class="products_pager form-inline m-3 pg-danger mt-4">
					<t t-call="website.pager">
						<t t-set="_classes">mt-2 ml-md-2</t>
					</t>
				</div>
            </div>
		</t>
