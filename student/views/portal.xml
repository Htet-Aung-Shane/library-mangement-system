<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="add_portal_view" inherit_id="portal.portal_my_home">
		<xpath expr="//div[hasclass('o_portal_category')]/t[2]" position="after">
			<t t-call="portal.portal_docs_entry">
				<t t-set="icon" t-value="'/student/static/description/portal.png'" />
				<t t-set="title">
					Library
				</t>
				<t t-set="text">
					See Your Library Transaction
				</t>
				<t t-set="url" t-value="'/my/student'" />
				<t t-set="config_card" t-value="True" />
			</t>
			<t t-call="portal.portal_docs_entry">
				<t t-set="icon" t-value="'/student/static/description/portal.png'" />
				<t t-set="title">
					Book Renting
				</t>
				<t t-set="text">
					Rent The Books
				</t>
				<t t-set="url" t-value="'/my/book/rent'" />
				<t t-set="config_card" t-value="True" />
			</t>
		</xpath>
	</template>
	<template id="student.StudentProfile" name="Library Transitions">
		<t t-call="website.layout">
			<div class="container p-4 coupon  mx-auto">
				<div class="d-flex justify-content-between p-2 mt-4">
					<div class="col-4 mb-2">
						<a href="/my/home" class="text-decoration-none">
							<i class="fa fa-home" aria-hidden="true" />
						</a>
						<span>
							/
						</span>
						<span class="text-muted">
							Library / Transitions
						</span>
					</div>
					<div
						class="col-lg-4 p-2  mb-2  border-primary border-top-0 border  border-start-0 border-end-0">
						<t t-foreach="profile" t-as="p">
							<table class="px-4">
								<tr>
									<td class="fw-bold">Student Name :</td>
									<td>
										<t t-out="p['name']" />
									</td>
									<td width="50px" />
									<td class="text-break fw-bold">Student Id : </td>
									<td>
										<t t-out="p['student_id']" />
									</td>
								</tr>
							</table>

						</t>
					</div>
				</div>
				<div>
					<table class="table table-bordered table-sm mb-1 text-center bg-dark">
						<thead style="font-size:12px;" class="text-light">
							<th class="col-1">Sequence Name</th>
							<th class="col-1">Book Name</th>
							<th class="col-2">Rent Date</th>
							<th class="col-1">Rent Qty</th>
							<th class="col-2">Due Date</th>
							<th class="col-2">Is Return</th>
							<th class="col-2">Is Penalty</th>
						</thead>
						<tbody style="font-size:12px;" class="text-light">

							<t t-foreach="data" t-as="d">
								<tr>
									<td class="col-2">
										<t t-out="d['rent_id'].name" />
									</td>
									<td class="col-2">
										<t t-out="d['book_id'].name" />
									</td>
									<td class="col-2">
										<t t-out="d['rent_date']" />
									</td>
									<td class="col-2">
										<t t-out="d['rent_quantity']" />
									</td>
									<td class="col-2">
										<t t-out="d['expire_date']" />
									</td>
									<td class="col-2">
										<t t-if="d['is_returned']">
											<t t-out="d['is_returned']" />
										</t>
										<t t-else="">
											False
										</t>
									</td>
									<td class="col-2">
										<t t-if="d['is_penalty']">
											<t t-out="d['is_penalty']" />
										</t>
										<t t-else="">
											False
										</t>
									</td>
								</tr>
							</t>
						</tbody>
					</table>
				</div>

			</div>
		</t>
	</template>

	<template id="student.BookRent" name="Library Transitions">
		<t t-call="website.layout">
			<div class="container p-4 coupon  mx-auto">
				<div class="d-flex justify-content-between p-2 mt-4">
					<div class="col-4 mb-2">
						<a href="/my" class="text-decoration-none">
							<i class="fa fa-home" aria-hidden="true" />
						</a>
						<span>
							/
						</span>
						<span class="text-muted">
							Library / Rent
						</span>
					</div>
					<div
						class="col-lg-4 p-2  mb-2  border-primary border-top-0 border  border-start-0 border-end-0">
						<t t-foreach="profile" t-as="p">
							<table class="px-4">
								<tr>
									<td class="fw-bold">Student Name :</td>
									<td>
										<t t-out="p['name']" />
									</td>
									<td width="50px" />
									<td class="text-break fw-bold">Student Id : </td>
									<td>
										<t t-out="p['student_id']" />
									</td>
								</tr>
							</table>

						</t>
					</div>
				</div>
				<div>
					<t t-if="form_submit">
						<div class="col-lg-6 col-md-12 alert alert-success" role="alert">
							You have successfully tick the book!
						  </div>
					</t>
					<form action="/my/book/rent" method="post">
						<h4>Rent The Books</h4>
						<div class="col-lg-6 col-md-12">
							<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
							<select class="form-select rounded-0" name="book"
								aria-label="Default select example">
								<t t-foreach="books" t-as="book">
									<option t-att-value="book['id']">
										<t t-out="book['name']" />
									</option>
								</t>
							</select>

						</div>
						<br />
						<div class="col-lg-6 col-md-12">
							<input type="text" name="qty" class="form-control rounded-0" placeholder="Type the rent qty" />
						</div>
						
						<br />
						<div class="col-lg-6 col-md-12">
							<input type="text" name="remark" class="form-control rounded-0"
								placeholder="Remark" />
						</div>
						<br />
						<div class="col-lg-6 col-md-12">
							<button type="submit"
								class="btn btn-sm  btn-outline-primary rounded-0 p-2 submint_btn">
								Book
							</button>
							<!-- <button
								class="btn btn-sm  btn-outline-danger rounded-0 p-2 ]">
								Cancel
							</button> -->
						</div>

					</form>
